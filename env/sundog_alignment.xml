<?xml version="1.0" encoding="UTF-8"?>
<mujoco model="sundog_alignment">
    <compiler angle="radian" coordinate="local"/>
    <option gravity="0 0 -9.81" integrator="RK4" timestep="0.01"/>

    <worldbody>
        <!-- Floor -->
        <geom name="floor" type="plane" pos="0 0 0" size="5 5 0.1" rgba="0.8 0.9 0.8 1"/>

        <!-- Ceiling -->
        <geom name="ceiling" type="plane" pos="0 0 2.5" size="5 5 0.1" rgba="0.8 0.8 1 1" euler="0 0 3.1416"/>

        <!-- Laser dot (invisible, logical target) -->
        <site name="laser_dot" pos="0 0 2.5" size="0.02" rgba="1 0 0 1"/>

        <!-- Pole base -->
        <body name="base" pos="0 0 0.1">
            <geom type="cylinder" size="0.02 0.1" rgba="0.6 0.6 0.6 1"/>
            <joint name="base_rotate" type="hinge" axis="0 0 1"/>
            <body name="pole1" pos="0 0 0.2">
                <geom type="capsule" size="0.01 0.5" fromto="0 0 0 0 0 1"/>
                <joint name="pitch1" type="hinge" axis="1 0 0"/>
                <body name="pole2" pos="0 0 1.0">
                    <geom type="capsule" size="0.01 0.5" fromto="0 0 0 0 0 1"/>
                    <joint name="pitch2" type="hinge" axis="1 0 0"/>
                    <site name="tip" pos="0 0 1.0" size="0.01" rgba="0 1 0 1"/>
                </body>
            </body>
        </body>
    </worldbody>

    <actuator>
        <motor joint="base_rotate" ctrlrange="-1 1"/>
        <motor joint="pitch1" ctrlrange="-1 1"/>
        <motor joint="pitch2" ctrlrange="-1 1"/>
    </actuator>
</mujoco>
